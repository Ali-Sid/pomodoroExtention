{
  "manifest_version": 3,
  "name": "Focus Booster",
  "version": "1.0",
  "description": "Boost focus, productivity, and efficiency. Track time, block distractions, and achieve more with Focus Booster!",
  "short_description": "Maximize Productivity with Focus Booster!",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
